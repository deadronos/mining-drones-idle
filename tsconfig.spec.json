{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest", "@testing-library/jest-dom", "node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/gen/**/*"
  ],
  "exclude": ["node_modules", "tests/ui/**/*.test.tsx"]
}
