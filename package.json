{
  "name": "mining-drones-idle",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:wasm:watch": "cd rust-engine && cargo watch -s \"wasm-pack build --target web --out-dir ../src/gen --features wasm\"",
    "dev": "concurrently \"npm:dev:wasm:watch\" \"vite\"",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "build:wasm": "cd rust-engine && wasm-pack build --target web --out-dir ../src/gen --features wasm",
    "build": "npm run build:wasm && tsc -b && vite build",
    "build:output": "npm run build",
    "deploy:pages": "echo 'Use GitHub Actions to deploy on tag push'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "preview": "vite preview",
    "e2e": "playwright test",
    "scan-long-files": "node scripts/scan-long-files.cjs"
  },
  "dependencies": {
    "@radix-ui/themes": "^3.2.1",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.14",
    "@types/three": "^0.180.0",
    "immer": "^10.1.3",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "render-composer": "^0.2.8",
    "three": "^0.180.0",
    "tslib": "^2.8.1",
    "use-sync-external-store": "^1.6.0",
    "wasm-pack": "^0.13.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "^1.0.0",
    "coverage-v8": "^0.0.1-security",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.4.0",
    "jsdom": "^27.1.0",
    "less": "^4.4.2",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass-embedded": "^1.93.2",
    "stylus": "^0.64.0",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.4",
    "concurrently": "^8.2.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
